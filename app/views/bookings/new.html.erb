<div class="container-sign-up" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://res.cloudinary.com/dhtd0cg7t/image/upload/v1613036245/walle_qomlqi.jpg)">
    <div class="box-form-position">
       <div class="form-border">
          <div class="form-sign-in">
            <%= simple_form_for [@droid, @booking] do |f| %>
            <%= f.input :start_date, as: :date, html5: true %>
            <%= f.input :end_date, as: :date, html5: true %>
            <%= f.submit "Submit", class: "btn btn-primary btn-block" %>
            <% end %>
          </div>
        </div>
    </div>
</div>