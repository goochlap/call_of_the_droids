<div class="container-booking-index">
  <div class="item-box">
    <div class="item col-6">
        <h2><%= current_user.name.capitalize %>'s bookings</h2>
          <ul><% @bookings.each do |booking| %>
            <div class="item-border">
              <h2><%= booking.droid.name %></h2>
              <p>session start at:<%= booking.start_date %>     --      session finish at:<%= booking.end_date %>
              <% if DateTime.now > booking.start_date %><span id="date-expired">ðŸ”´ EXPIRED</span>
              <% end %>
              </p>
<!--               <%= link_to '[delete]', user_booking_path(booking), method: :delete, data: { confirm: 'Are you sure?'} %>
 -->            </div>
          <% end %>
          </ul>
    </div>
    <div class="item2 col-6">
      <h2>My droids list</h2>
        <% @droids.each do |droid| %>
           <div class="item-border">
            <h2><%= droid.name %></h2>
            <%= link_to '[delete]', droid_path(droid), method: :delete, data: { confirm: 'Are you sure?'} %>
            <% droid.bookings.each do |booking| %>
            <p>
              // rent by <%= booking.find_user(booking.user_id) %>
              // at <%= booking.start_date %> to <%= booking.end_date %>
            </p>
            <% end %>
           </div>
        <% end %>
    </div>
  </div>
</div>
